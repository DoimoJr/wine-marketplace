# Database
DATABASE_URL="postgresql://username:password@localhost:5432/wine_marketplace?schema=public"
# For Neon (recommended):
# DATABASE_URL="postgresql://username:password@ep-example-123456.us-east-1.aws.neon.tech/wine_marketplace?sslmode=require"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="24h"

# OAuth Configuration
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_CALLBACK_URL="http://localhost:3002/api/auth/google/callback"

# Facebook OAuth (optional)
FACEBOOK_CLIENT_ID="your-facebook-client-id"
FACEBOOK_CLIENT_SECRET="your-facebook-client-secret"

# Frontend URLs
WEB_URL="http://localhost:3000"
ADMIN_URL="http://localhost:3001"
BASE_URL="http://localhost:3002"

# Email Configuration (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
EMAIL_FROM="Wine Marketplace <noreply@winemarketplace.com>"

# Payment Configuration
PAYPAL_CLIENT_ID="your-paypal-client-id"
PAYPAL_CLIENT_SECRET="your-paypal-client-secret"
PAYPAL_MODE="sandbox" # or "live" for production

STRIPE_PUBLIC_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# File Upload Configuration
MAX_FILE_SIZE="10485760" # 10MB in bytes
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/webp"

# AWS Configuration (for S3 uploads in production)
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_S3_BUCKET="wine-marketplace-uploads"

# Redis Configuration (for caching and sessions)
REDIS_URL="redis://localhost:6379"

# Environment
NODE_ENV="development"
PORT="3002"

# Logging
LOG_LEVEL="debug" # error, warn, info, debug

# Rate Limiting
RATE_LIMIT_MAX="100" # requests per windowMs
RATE_LIMIT_WINDOW="900000" # 15 minutes in ms

# Security
CORS_ORIGINS="http://localhost:3000,http://localhost:3001"
TRUSTED_PROXIES="127.0.0.1,::1"