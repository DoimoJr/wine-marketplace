{
  "name": "@wine-marketplace/web",
  "version": "0.1.0",
  "description": "Wine marketplace web frontend built with Next.js",
  "private": true,
  "scripts": {
    "build": "next build",
    "build:prod": "NODE_ENV=production next build",
    "dev": "next dev -p ${PORT:-3000}",
    "lint": "next lint",
    "start": "next start -p ${PORT:-3000}",
    "start:prod": "NODE_ENV=production next start",
    "type-check": "tsc --noEmit",
    "docker:build": "docker build -t wine-marketplace-web -f Dockerfile ../..",
    "docker:run": "docker run -p 3000:3000 wine-marketplace-web"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^3.3.2",
    "@wine-marketplace/shared": "workspace:*",
    "@wine-marketplace/ui": "workspace:*",
    "axios": "^1.6.2",
    "clsx": "^2.0.0",
    "next": "14.0.4",
    "next-auth": "^4.24.11",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.48.2",
    "react-query": "^3.39.3",
    "tailwind-merge": "^2.2.0",
    "zod": "^3.22.4",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.0.1",
    "eslint": "^8",
    "eslint-config-next": "14.0.4",
    "postcss": "^8",
    "prettier": "^3.0.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5"
  }
}