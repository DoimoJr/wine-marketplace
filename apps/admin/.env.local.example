# Next.js Environment Variables for Admin Dashboard

# API Configuration
NEXT_PUBLIC_API_URL="http://localhost:3002/api"
NEXT_PUBLIC_WS_URL="http://localhost:3002"
NEXT_PUBLIC_BASE_URL="http://localhost:3001"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3001"
NEXTAUTH_SECRET="your-nextauth-admin-secret-change-this-in-production"

# OAuth Providers (Admin)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Admin Configuration
NEXT_PUBLIC_APP_NAME="Wine Marketplace Admin"
NEXT_PUBLIC_SUPPORT_EMAIL="admin@winemarketplace.com"

# Feature Flags for Admin
NEXT_PUBLIC_ENABLE_USER_MANAGEMENT="true"
NEXT_PUBLIC_ENABLE_WINE_MODERATION="true"
NEXT_PUBLIC_ENABLE_ANALYTICS="true"
NEXT_PUBLIC_ENABLE_BULK_ACTIONS="true"

# Dashboard Configuration
NEXT_PUBLIC_DEFAULT_PAGE_SIZE="20"
NEXT_PUBLIC_MAX_EXPORT_RECORDS="10000"
NEXT_PUBLIC_REFRESH_INTERVAL="30000" # 30 seconds

# Environment
NODE_ENV="development"
PORT="3001"